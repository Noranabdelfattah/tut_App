<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tut_App.TestPage">
<ContentPage.Content>


 <RelativeLayout   >

        <Label x:Name="Header" Text="Basic Data" FontSize="18"  FontAttributes="Bold" 
                     RelativeLayout.XConstraint ="{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0.5,
                             Constant=5}"
    RelativeLayout.YConstraint =
      "{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0.5,
                             Constant=5}" />
   
       <Label Text="Permission" FontSize="12" 
                     RelativeLayout.XConstraint ="{ConstraintExpression Type=RelativeToView,ElementName=Header,
                             Property=X,
                             Factor=0.5,
                             Constant=10}"
    RelativeLayout.YConstraint =
      "{ConstraintExpression Type=RelativeToView, ElementName=Header,
                             Property=Y,
                             Factor=0.5,
                             Constant=10}" />
       
              
            </RelativeLayout>

</ContentPage.Content>





















